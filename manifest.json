{
  "name": "TruckersMP Improved",
  "version": "1.8.0",
  "manifest_version": 2,
  "description": "Useful functions for TMP Staff",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "42",
  "applications": {
    "gecko": {
      "id": "{9d134ea1-d324-4dff-bed6-170bdef5e439}",
      "strict_min_version": "48.0",
      "update_url": "https://bigmp.ru/improved/firefox_update/updates.json"
    }
  },
  "permissions": [
    "*://*.truckersmp.com/*",
    "*://*.jmdev.ca/*",
    "*://*.steampowered.com/*",
    "*://*.steamcommunity.com/*",
    "notifications",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "clipboardRead",
    "clipboardWrite"
  ],

   "content_security_policy": "script-src 'self' https://www.gstatic.com https://*.firebaseio.com https://*.firebase.com https://apis.google.com https://www.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'; style-src 'self' 'unsafe-inline' https://www.gstatic.com https://*.googleapis.com https://cdnjs.cloudflare.com https://*.firebase.com",

  "background": {
    "page": "src/bg/background.html"
  },

  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "src/options/*"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/popup/index.html"
  },

  "content_scripts": [{
      "matches": [
        "https://truckersmp.com/reports/view/*"
      ],
      "css": [
        "src/inject/reports/inject.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/youtubepopup.js",
        "js/bootstrap.min.js",
        "js/moment-with-locales.min.js",
        "js/clipboard.min.js",
        "js/underscore-min.js",
        "src/main.js",
        "src/inject/reports/inject.js"
      ]
    },

    {
      "matches": [
        "https://truckersmp.com/reports*"
      ],
      "exclude_matches": [
        "https://truckersmp.com/reports/view/*",
        "https://truckersmp.com/reports/create"
      ],
      "css": [
        "css/datatables.min.css",
        "src/inject/reports-table/inject.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/dataTables.min.js",
        "js/moment-with-locales.min.js",
        "src/main.js",
        "src/inject/reports-table/inject.js"
      ]
    },

    {
      "matches": [
        "https://truckersmp.com/admin/ban/edit/*",
        "https://truckersmp.com/admin/ban/add/*"
      ],
      "css": [
        "src/inject/ban-edit/inject.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/moment-with-locales.min.js",
        "src/main.js",
        "src/inject/ban-edit/inject.js"
      ]
    },

    {
      "matches": [
        "https://truckersmp.com/appeals/view/*"
      ],
      "css": [
        "src/inject/profile/inject.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/youtubepopup.js",
        "js/moment-with-locales.min.js",
        "src/main.js",
        "src/inject/appeals/inject.js"
      ]
    },

    {
      "matches": [
        "https://truckersmp.com/appeals/adminindex*"
      ],
      "css": [
        "css/datatables.min.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/dataTables.min.js",
        "js/moment-with-locales.min.js",
        "src/main.js",
        "src/inject/appeals-table/inject.js"
      ]
    },

    {
      "matches": [
        "https://truckersmp.com/user/*"
      ],
      "exclude_matches": [
        "https://truckersmp.com/user/search*",
        "https://truckersmp.com/user/edit/*",
        "https://truckersmp.com/user/appeals/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "src/main.js",
        "src/inject/profile/inject.js"
      ]
    }
  ]
}